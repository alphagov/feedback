<%= render partial: "/contact/govuk/accessible_format_requests/inputs/caption" %>
<%= render "govuk_publishing_components/components/fieldset", {
  legend_text: question_title,
  heading_level: 1,
  heading_size: "l",
} do %>
  <%= render "govuk_publishing_components/components/input", {
    label: {
      text: input[:label]
    },
    name: input[:key],
    id: input[:key],
    type: input[:type],
    error_message: flash["input_errors"]&.[](input[:key]),
    autocomplete: input[:autocomplete]
  } %>
<% end %>
